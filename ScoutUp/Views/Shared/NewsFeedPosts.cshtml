<div class="post-content">
   
        @foreach (var post in ViewBag.posts)
        {
            <div id ="@string.Concat("post",@post.PostID)">
            @try
            {
                <!--Fotoğraf kısımı-->
                foreach (var postPhoto in post.PostPhotos)
                {
                    foreach (var postPhotoLocationSmall in postPhoto.PostPhotosLocation)
                    {
                        <img src="@postPhotoLocationSmall.PostPhotosLocateBig" alt="post-image" class="img-responsive post-image"/>
                    }
                }
                <!--Fotoğraf sonu-->
                <div class="post-container">
                    <img src="@post.User.UserProfilePhoto" alt="user" class="profile-photo-md pull-left"/>
                    <div class="post-detail">
                        <div class="user-info">
                            <h5><a href="/users/index/@post.UserID" class="profile-link">@post.User.UserName @post.User.UserSurname</a>
                                <a href="/users/stopfollow/@post.UserID"></a><span class="following">Takip Ediliyor</span></h5>
                            <p class="text-muted">@post.PostDatePosted</p>
                        </div>
                        <div class="reaction">
                            @Html.Action("UserLikedPost", "Post", new { id = @post.PostID })
                        </div>
                        <div class="line-divider"></div>
                        <div class="post-text">
                            <p>@post.PostText</p>
                        </div>
                        <div class="line-divider"></div>
                        <div id="@string.Concat("yorum",post.PostID)">
                            @Html.Action("PostComments", "Post", new { id = @post.PostID })
                        </div>
                        <div class="post-comment">
                            <img src="@Model.UserProfilePhoto" alt="" class="profile-photo-sm"/>
                            <input id="userPost" data-id="@post.PostID" type="text" class="form-control" placeholder="Bir yorum yaz!">
                        </div>
                    </div>
                </div>
            }
            catch
            {
                continue;
            }
        </div>
        }
   
</div>
