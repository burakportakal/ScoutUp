<div class="timeline">
    <div class="timeline-cover">

        <!--Timeline Menu for Large Screens-->
        <div class="timeline-nav-bar hidden-sm hidden-xs">
                <div class="col-md-3" style="height: 50px">
                    <div class="profile-info" style="margin-top: -54px; position: unset; top: 0px;padding: 0 0px">
                        <img src="@Model.UserProfilePhoto" alt="" class="img-responsive profile-photo" />
