@if (@ViewBag.isLiked == true)
{
    <a id="likePost" data-id="@ViewBag.postid" class="btn text-green"><i class="icon ion-thumbsup"></i>Beğen @ViewBag.postLikesCount </a>
}
else
{
    <a id="likePost" data-id="@ViewBag.postid" class="btn text-red"><i class="icon ion-thumbsup"></i>Beğen @ViewBag.postLikesCount </a>
}