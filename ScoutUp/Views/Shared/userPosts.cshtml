<div class="post-content">
    @foreach (var post in @Model.UserPosts)
    {
        <div id ="@string.Concat("post",@post.PostID)">
        <!--Post Date-->
        <div class="post-date hidden-xs hidden-sm">
            <h5>@Model.UserName</h5>
            <p class="text-grey">@post.PostDatePosted</p>
        </div>
        <!--Post Date End-->
        @foreach (var postPhoto in post.PostPhotos)
         {
             <img src="@postPhoto.PostPhotosLocateBig" alt="post-image" class="img-responsive post-image"/>
         }
            <div class="post-container">
                <img src="@Model.UserProfilePhoto" alt="user" class="profile-photo-md pull-left"/>
                <div class="post-detail">
                    <div class="user-info">
                        <h5><a href="/users/index/@Model.UserID" class="profile-link">@Model.UserName @Model.UserSurname</a> <!--<span class="following"></span>--></h5>
                        <p class="text-muted">Published @post.PostDatePosted</p>
                    </div>
                    <div class="reaction">
                        @Html.Action("UserLikedPost", "Post", new { id = @post.PostID })
                    </div>
                    <div class="line-divider"></div>
                    <div class="post-text">
                        <p>@post.PostText</p>
                    </div>
                    <div class="line-divider"></div>
                    <div id="@post.PostID">
                        @Html.Action("PostComments", "Post", new { id = @post.PostID })
                    </div>
                    <div class="post-comment">
                        <img src="@ViewBag.currentUser.UserProfilePhoto" alt="" class="profile-photo-sm" />
                        <input id="userPost" data-id="@post.PostID" type="text" class="form-control" placeholder="Bir yorum yaz!">
                    </div>
                </div>
            </div>
         </div>
    }
</div>
